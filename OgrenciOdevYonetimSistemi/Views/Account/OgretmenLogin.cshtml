@{
    ViewData["Title"] = "Öğretmen Girişi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold">🧑‍🏫 Öğretmen Girişi</h2>

    <form asp-action="OgretmenLogin" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label>Kullanıcı Adı</label>
            <input type="text" name="KullaniciAdi" class="form-control" required />
        </div>

        <div class="form-group mb-3">
            <label>Şifre</label>
            <input type="password" name="Sifre" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-success w-100">Giriş Yap</button>

        @if (ViewBag.Hata != null)
        {
            <div class="text-danger text-center mt-3">@ViewBag.Hata</div>
        }
    </form>
</div>
