@model List<OgrenciOdevYonetimSistemi.Models.OdevTeslim>

@{
    ViewData["Title"] = "Ödevlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold mb-4">📘 Yüklediğiniz Ödevler</h2>

    @if (Model != null && Model.Count > 0)
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var odev in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="card-title fw-semibold">
                                    <i class="bi bi-file-earmark-text"></i> @odev.DosyaAdi
                                </h6>
                                <p class="card-text text-muted mb-2">
                                    <i class="bi bi-calendar-event"></i>
                                    Yüklenme Tarihi: <strong>@odev.YuklenmeTarihi.ToShortDateString()</strong>
                                </p>
                            </div>

                            <div class="mt-auto">
                                <a class="btn btn-sm btn-outline-primary me-2 mb-1"
                                   href="@Url.Content("~/verilenOdevDosyalari/" + odev.DosyaAdi)" target="_blank">
                                    <i class="bi bi-eye"></i> Görüntüle
                                </a>
                                <a class="btn btn-sm btn-outline-success mb-1"
                                   href="@Url.Content("~/verilenOdevDosyalari/" + odev.DosyaAdi)" download>
                                    <i class="bi bi-download"></i> İndir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    } 

    else
    {
        <div class="alert alert-warning text-center mt-4 fw-semibold">
            Henüz bir ödev yüklemediniz.
        </div>
    }
</div>
