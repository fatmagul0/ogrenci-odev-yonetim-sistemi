@model List<OgrenciOdevYonetimSistemi.Models.OgrenciNotViewModel>

@{
    ViewData["Title"] = "Notlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold text-primary mb-4">📝 Notlarım</h2>

    @if (Model != null && Model.Any())
    {
        foreach (var not in Model)
        {
            <div class="row row-cols-1 row-cols-md-2 g-4 mb-4">
                <div class="col">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <h5 class="card-title text-center text-secondary mb-3">@not.Ders - @not.OgretmenAd</h5>
                            <ul class="list-group list-group-flush text-center">
                                <li class="list-group-item">📘 Vize: <strong>@not.Vize</strong></li>
                                <li class="list-group-item">📗 Final: <strong>@not.Final</strong></li>
                                <li class="list-group-item">📙 Proje: <strong>@not.Proje</strong></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">🎯 Ortalama ve Başarı</h5>
                            <p class="display-5 fw-bold text-@not.Renk">@not.Ortalama</p>
                            <span class="badge bg-@not.Renk px-4 py-2 fs-6">@not.BasariDurumu</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center mt-4 fw-semibold">
            Henüz not girilmemiş.
        </div>
    }
</div>
